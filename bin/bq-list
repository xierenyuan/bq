#!/usr/bin/env node

const logger = require('../lib/logger')
const request = require('request')
const chalk = require('chalk')

/**
 * Padding.
 */
console.log()
process.on('exit', function () {
  console.log()
})

try {
  var config = require('../.bqrc.json')
  run(config.key)
} catch(e) {
  console.log('  è¿˜æ²¡æœ‰private_token /(ã„’oã„’)/~~:')
  console.log()
  console.log(chalk.gray('    ä½ å¯ä»¥æ‰§è¡Œbq login å†™å…¥key '))
}

function run(key) {
  /**
   * List repos.
   */
  request.get('http://git.beiquan.org/api/v3/groups/bq-fe?private_token=' + key, function (err, res, body) {
    if (err) logger.fatal(err)
    var requestBody = JSON.parse(body)
    let projects = requestBody.projects
    if (Array.isArray(projects)) {
      projects = projects.filter(item =>  item.name.indexOf('-template') != -1)
      console.log('  ä¸‹è¾¹æ˜¯å¯ä»¥çš„ä½¿ç”¨çš„æ¨¡æ¿ğŸ˜:')
      console.log()
      projects.forEach(function (repo) {
        console.log(
          '  ' + chalk.yellow('â˜…') +
          '  ' + chalk.blue(repo.name) +
          ' - ' + repo.description)
      })
    } else {
      console.error('è·å–ä¸åˆ°é¡¹ç›®, è¯·æ£€æµ‹ä½ çš„key æ˜¯å¦è®¾ç½®æ­£ç¡®')
    }
  })
}

